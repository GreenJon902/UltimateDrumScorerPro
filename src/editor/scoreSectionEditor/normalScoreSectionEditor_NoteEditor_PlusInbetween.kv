<NormalScoreSectionEditor_NoteEditor_PlusInbetween>:
    size: container.size

    note_holder: note_holder
    plus_holder: plus_holder

    SelfSizingBoxLayout:
        id: container
        orientation: "vertical"
        anchor: "middle"

        SelfSizingBoxLayout:
            id: note_holder

        SelfSizingBoxLayout:
            id: plus_holder


<Plus>:  # Width set by parent
    default_width: 2.5  # Width when nothing to set too
    height: 5
    canvas:
        Color:
            rgba: 0, 0, 0, (1 if self.mouse_over else 0.1)
        Line:
            points: 1.25, 0, 1.25, 5
            width: st
        Line:
            points: 0, 2.5, 2.5, 2.5
            width: st