#:set bar_edge_padding 0.5
#:set half_bar_edge_padding 1

#:set dot_y 1
#:set bars_y 5


<SectionModifier>:  # Width set by parent
    width: 5
    height: 10

    canvas:
        Color:
            rgba: 0, 0, 0, 0.1
        Line:
            points: self.width / 2 - 2.5, 0, self.width / 2 + 2.5, 5  # We want to center the x
            width: st
        Line:
            points: self.width / 2 - 2.5, 5, self.width / 2 + 2.5, 0
            width: st

        Color:
            rgba: 0, 0, 0, 0.1
        Line:
            points: 2.5, 5, 2.5, 10
            width: st
        Line:
            points: 0, 7.5, 5, 7.5
            width: st
