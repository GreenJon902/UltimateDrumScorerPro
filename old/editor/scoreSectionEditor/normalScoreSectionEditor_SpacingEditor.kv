<EditingSpacingMethodSelector>:
    BoxLayout:
        padding: mm(5)
        spacing: mm(5)
        orientation: "vertical"

        Button:
            text: "Set all"
            on_release: root.normal_editor.editing_spacing_state = "equal_spacing_size"

        Button:
            text: "Dynamically set all"
            on_release: root.normal_editor.editing_spacing_state = "dynamic_spacing_size"

<SpacingSliderAndExitButtons>:
    BoxLayout:
        padding: mm(5)
        spacing: mm(5)
        orientation: "vertical"

        Slider:
            on_value: root.change_callback(self, self.value)
            min: root.min
            max: root.max

        Button:
            text: "Done"
            on_release: root.normal_editor.editing_spacing_state = "what"